<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="generalAppender" fileName="learnpl-app.log"
                     filePattern="learnpl-app_%d{yyyy-MM-dd_HH-mm}_%i.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <RollingFile name="spellChecker" fileName="learnpl-spellChecker.log"
                     filePattern="learnpl-spellChecker_%d{yyyy-MM-dd_HH-mm}_%i.log">
            <PatternLayout>
                <Pattern>%d %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="generalAppender"/>
        </Root>
        <Logger name="spellChecker" level="info" additivity="false">
            <AppenderRef ref="spellChecker"/>
        </Logger>
    </Loggers>

</Configuration>