<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootNode" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.igye.learnpl2.controllers.ChoseFileWithTextController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200.0" minWidth="-Infinity" prefHeight="200.0" prefWidth="652.0">
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="filePathTextField" minWidth="531.0" prefHeight="25.0" prefWidth="531.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="openDialogBtn" mnemonicParsing="false" text="..." onAction="#openChooseFileDialog"/>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="cancelBtn" mnemonicParsing="false" text="Cancel" />
                  <Button mnemonicParsing="false" text="Ok" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
