<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<StackPane fx:id="mainWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.igye.learnpl2.controllers.MainWindowController">
    <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS">
        <Tab fx:id="mainTab" text="Main" onCloseRequest="#onMainTabCloseRequest">
            <VBox prefHeight="200.0" prefWidth="100.0">
                <HBox fillHeight="false" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <Button mnemonicParsing="false" onAction="#loadTextButtonPressed" text="Load text"/>
                    <Button mnemonicParsing="false" onAction="#backButtonPressed" text="Back"/>
                    <Button mnemonicParsing="false" onAction="#nextButtonPressed" text="Next"/>
                    <Button mnemonicParsing="false" onAction="#selectPrevWordBtnPressed" text="SelectPrevWord"/>
                    <Button mnemonicParsing="false" onAction="#selectNextWordBtnPressed" text="SelectNextWord"/>
                    <Button mnemonicParsing="false" onAction="#translateSelectedWordBtnPressed" text="TranslateSelectedWord"/>
                </HBox>
                <Pane fx:id="contentPane" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <TextFlow fx:id="textFlow" style="-fx-font-size: 20px" prefWidth="${contentPane.width}"/>
                </Pane>
            </VBox>
        </Tab>
    </TabPane>
</StackPane>
